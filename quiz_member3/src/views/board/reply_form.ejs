<div id="modal_wrap">
    <div id="first">
        <div style="width: 250px; margin: 0 auto; padding-top: 20px;">
            <form id="frm">
                <input type="text" readonly name="write_no" value="<%= data.WRITE_NO %>"> <br>
                <input type="text" readonly name="id" value="<%= username %>"> <br>
                <b>답글 작성 페이지</b> <br>
                <b>작성자 : <%= username %></b> <br>
                <b>제목</b> <br>
                 <input type="text" name="title" size="30"><hr>
                 <b>내용</b> <br>
                 <textarea name="content" rows="5" cols="30"></textarea><hr>
                 <button type="button" onclick="rep()">답글</button>
                 <button type="button" onclick="reply_hide()">취소</button>
            </form>
        </div>
    </div>
</div>